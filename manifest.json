{
  "manifest_version": 3,
  "name": "SuperGrok Pro",
  "version": "1.0",
  "description": "Poweruser extension for Grok.com",
  "permissions": [
    "downloads",
    "storage",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://assets.grok.com/*",
    "https://imagine-public.x.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SuperGrok Pro Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/imagine/favorites*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
